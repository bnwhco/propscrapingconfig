
{
  "manifest_version": 3,
  "name": "Property Scraper & Mapper",
  "version": "0.1.0",
  "description": "Scrape real estate sites and map data fields.",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel"

  ],
  "host_permissions": [
    "*://*.amazonaws.com/*"
  ],
  "background": {

    "service_worker": "src/background.ts",
    "type": "module"
  },
  "action": {
    "default_title": "Open Property Scraper",

    "default_popup": "popup.html"
  },
  "side_panel": {

    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}